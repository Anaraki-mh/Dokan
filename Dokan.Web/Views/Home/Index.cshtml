<script>
    function AddToCart(id) {
        $.ajax({
            type: "GET",
            url: "/Cart/Add",
            dataType: "html",
            data: "productId=" + id + "&number=1",
            success: function (data) {
                toastr.success('Product added to cart!');
                LoadCartPartial();
            }
        });
    }
</script>