@model List<Dokan.Web.Models.BlogPostModel>

<section class="latest-blog spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Our Newest <a href="~/Blog" style="color: #e7ab3c;">Blogs</a></h2>
                </div>
            </div>
        </div>
        
        <div class="row">
            @foreach (var blog in Model)
            {

            <div class="col-lg-4 col-md-6">
                <div class="single-latest-blog">
                    <img src="~/Files/@blog.Image" alt="@blog.Title">
                    <div class="latest-text">
                        <div class="tag-list">
                            <div class="tag-item">
                                <i class="fa fa-calendar-o"></i>
                                @blog.CreateDateTime
                            </div>
                        </div>
                        <a href="~/Blog/Details/@blog.Id/@Dokan.WebEssentials.SEO.CreateSeoFriendlyUrlTitle(blog.Title)">
                            <h4>@blog.Title</h4>
                        </a>
                        <p>
                            @blog.ShortDescription
                        </p>
                    </div>
                </div>
            </div>
            }
            
        </div>
        <div class="benefit-items">
            <div class="row">

                <div class="col-lg-4">
                    <div class="single-benefit">
                        <div class="sb-icon">
                            <img src="~/Files/@ViewBag.BenifitsOneImage" alt="@ViewBag.BenifitsOneTitle">
                        </div>
                        <div class="sb-text">
                            <h6>
                                @ViewBag.BenifitsOneTitle
                            </h6>
                            <p>
                                @ViewBag.BenifitsOneDescription
                            </p>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="single-benefit">
                        <div class="sb-icon">
                            <img src="~/Files/@ViewBag.BenifitsTwoImage" alt="@ViewBag.BenifitsTwoTitle">
                        </div>
                        <div class="sb-text">
                            <h6>
                                @ViewBag.BenifitsTwoTitle
                            </h6>
                            <p>
                                @ViewBag.BenifitsTwoDescription
                            </p>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="single-benefit">
                        <div class="sb-icon">
                            <img src="~/Files/@ViewBag.BenifitsThreeImage" alt="@ViewBag.BenifitsThreeTitle">
                        </div>
                        <div class="sb-text">
                            <h6>
                                @ViewBag.BenifitsThreeTitle
                            </h6>
                            <p>
                                @ViewBag.BenifitsThreeDescription
                            </p>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>