@model Dokan.Web.Models.DiscountCategoryModel

<section class="deal-of-week set-bg spad" data-setbg="/Files/@ViewBag.DealsBanner">
    <div class="container">
        <div class="col-lg-6 text-center">
            <div class="section-title">
                <h2>Deal Of The Month</h2>

                <div class="product-price">
                    UP TO %@Model.Discount OFF
                </div>
            </div>
            <div class="countdown-timer" id="countdown">
                <div class="cd-item">
                    <span>@Model.UntilExpiration.Days</span>
                    <p>Days</p>
                </div>

                <div class="cd-item">
                    <span>@Model.UntilExpiration.Hours</span>
                    <p>Hrs</p>
                </div>

                <div class="cd-item">
                    <span>@Model.UntilExpiration.Minutes</span>
                    <p>Mins</p>
                </div>

                <div class="cd-item">
                    <span>@Model.UntilExpiration.Seconds</span>
                    <p>Secs</p>
                </div>
            </div>
            <a href="/Products/Deals" class="primary-btn">Shop Now</a>
        </div>
    </div>
</section>
