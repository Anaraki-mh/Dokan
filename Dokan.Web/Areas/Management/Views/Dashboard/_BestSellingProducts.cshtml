@model List<Dokan.Domain.Website.Product>

@if (Model.Count > 0)
{
    <table class="table table-responsive-sm table-hover text-center">
        <thead>
            <tr>
                <th>Title</th>
                <th>Category</th>
                <th>Stock</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.ProductCategory.Title</td>
                    <td>@item.Stock</td>
                    <td>@item.Price.ToString("N0")</td>
                </tr>
            }

        </tbody>
    </table>
}