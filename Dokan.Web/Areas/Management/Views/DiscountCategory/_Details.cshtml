@model Dokan.Web.Areas.Management.Models.DiscountCategoryModel

@{
    ViewBag.Title = "_Details";
}

<div class="">
    <div class="card-body">
        <h4 class="card-title">Details</h4>
        <p class="card-description">

        </p>
        <form class="forms-sample">

            <div class="form-group">
                @Html.LabelFor(x => x.Title)
                @Html.TextBoxFor(x => x.Title, new { @class = "form-control", @readonly = true })
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.Discount)
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text bg-gradient-primary text-white">$</span>
                    </div>
                    @Html.TextBoxFor(x => x.Discount, new { @class = "form-control", type = "number", @readonly = true })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.ExpiryDateTime)
                <input type="text" value="@Model.ExpiryDateTime" class="form-control" readonly="readonly" />
            </div>

            <div class="form-group" id="product-dropdown-section">
                @Html.LabelFor(x => x.ProductIds)
                @Html.ListBoxFor(x => x.ProductIds, new MultiSelectList(Model.ProductDropdown, "Value", "Text", "Group.Name"), new { @class = "form-control", multiple = "multiple", id = "dropdown", @readonly = true })
            </div>

        </form>
    </div>
</div>
<script type="text/javascript">
    $('#dropdown').chosen();
</script>