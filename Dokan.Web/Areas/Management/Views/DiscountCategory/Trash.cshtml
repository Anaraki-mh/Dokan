<script src="~/Scripts/jquery-3.4.1.js"></script>
<script type="text/javascript" defer>

    $(document).ready(function () {
        RefreshList();
    });

    function RefreshList() {
        $.ajax({
            type: "GET",
            url: "/Management/DiscountCategory/TrashList",
            dataType: "html",
            data: "",
            success: function (data) {
                document.getElementById("list").innerHTML = data;
            }
        });
    }


    function ConfirmDelete(id) {
        bootbox.confirm({
            message: '<br />Do you confirm permanantly deleting this entity?',
            backdrop: true,
            centerVertical: true,
            buttons: {
                confirm: {
                    label: 'Confirm',
                    className: 'btn-gradient-danger'
                },
                cancel: {
                    label: 'Cancel',
                    className: 'btn-light'
                }
            },
            callback: function (result) {
                if (result == true) {

                    $.ajax({
                        type: "GET",
                        url: "/Management/DiscountCategory/Delete",
                        dataType: "application/json",
                        data: "id=" + id,
                        success: function () {
                        }
                    });
                    setTimeout(function () {
                        RefreshList();
                    }, 1000);
                }
            }
        });
    }

    function DeleteAll() {
        bootbox.confirm({
            message: '<br />Do you confirm permanantly deleting all items in trash?',
            backdrop: true,
            centerVertical: true,
            buttons: {
                confirm: {
                    label: 'Confirm',
                    className: 'btn-gradient-danger'
                },
                cancel: {
                    label: 'Cancel',
                    className: 'btn-light'
                }
            },
            callback: function (result) {
                if (result == true) {

                    $.ajax({
                        type: "GET",
                        url: "/Management/DiscountCategory/DeleteAllTrash",
                        dataType: "application/json",
                        data: "",

                    });
                    setTimeout(function () {
                        RefreshList();
                    }, 1000);
                }
            }
        });
    }

    function Details(id) {
        $.ajax({
            type: "GET",
            url: "/Management/DiscountCategory/Details",
            dataType: "html",
            data: "id=" + id,
            success: function (data) {
                bootbox.alert({
                    message: data,
                    backdrop: true,
                    scrollable: true,
                    size: 'large',
                    centerVertical: true,
                });
            }
        });
    }

    function Restore(id) {
        bootbox.confirm({
            message: '<br />Do you confirm restoring this entity?',
            backdrop: true,
            centerVertical: true,
            buttons: {
                confirm: {
                    label: 'Confirm',
                    className: 'btn-gradient-success'
                },
                cancel: {
                    label: 'Cancel',
                    className: 'btn-light'
                }
            },
            callback: function (result) {
                if (result == true) {

                    $.ajax({
                        type: "GET",
                        url: "/Management/DiscountCategory/Restore",
                        dataType: "application/json",
                        data: "id=" + id,
                        success: function (data) {
                        }
                    });
                    setTimeout(function () {
                        RefreshList();
                    }, 1000);
                }
            }
        });
    }
</script>

