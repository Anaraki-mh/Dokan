@model Dokan.Web.Areas.Management.Models.MessageModel

@{
    ViewBag.Title = "Reply";
    Layout = "~/Areas/Management/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Reply</h4>
        <p class="card-description">
            Reply to a Blog Comment
        </p>

        <div id="contact-us-message">

        </div>

        <br />
        <hr />
        <br />

        <form class="forms-sample" method="post" action="~/Management/Message/Reply" enctype="application/x-www-form-urlencoded">

            @Html.HiddenFor(x => x.Id)
            @Html.HiddenFor(x => x.Email)

            <div class="form-group">
                @Html.LabelFor(x => x.Subject)
                @Html.TextBoxFor(x => x.Subject, new { @class = "form-control", @placeholder = "Subject" })
                <label class="m-3">
                    @Html.ValidationMessageFor(x => x.Subject, "", new { @class = "text-danger" })
                </label>
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.MessageBody)
                @Html.TextBoxFor(x => x.MessageBody, new { @class = "form-control", @placeholder = "Email/Message Body" })
                <label class="m-3">
                    @Html.ValidationMessageFor(x => x.MessageBody, "", new { @class = "text-danger" })
                </label>
            </div>

            <button type="submit" class="btn btn-gradient-primary mr-2">Submit</button>
            <a href="~/Management/Message/Index" class="btn btn-light">Cancel</a>
        </form>
    </div>
</div>


<script>
    $.ajax({
        type: "GET",
        url: "/Management/Message/Details",
        dataType: "html",
        data: "id=" + @Model.Id,
        success: function (data) {
            document.getElementById("contact-us-message").innerHTML = data;
        }
    });
</script>