@model Dokan.Web.Areas.Management.Models.FileModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Management/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Create</h4>
        <p class="card-description">
            Create a new Blog Post
        </p>
        <form class="forms-sample" method="post" action="~/Management/File/Create" enctype="multipart/form-data">

            <div class="form-group">
                @Html.LabelFor(x => x.Title)
                @Html.TextBoxFor(x => x.Title, new { @class = "form-control", @placeholder = "File title" })
                <label class="m-3">
                    @Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger" })
                </label>
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.FileType)
                @Html.EnumDropDownListFor(x => x.FileType, "Select a file type...", new { @class = "form-control" })
                <label class="m-3">
                    @Html.ValidationMessageFor(x => x.FileType, "", new { @class = "text-danger" })
                </label>
            </div>

            <div class="form-group">
                <label for="uploadedFile" class="drop-container">
                    <span class="drop-title">Drop a file here</span>
                    or
                    <input type="file" name="uploadedFile" id="uploadedFile"  required>
                </label>
            </div>


            <button type="submit" class="btn btn-gradient-primary mr-2">Submit</button>
            <a href="~/Management/File/Index" class="btn btn-light">Cancel</a>
        </form>
    </div>
</div>


